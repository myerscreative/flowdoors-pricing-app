# Data mode: 'mock' uses JSON seeds; anything else uses live services
NEXT_PUBLIC_DATA_MODE=

# Development Mode (set to 'true' to bypass auth in development)
NEXT_PUBLIC_DEV_MODE=false

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Firebase Admin Configuration (for Cloud Functions)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase Client Configuration (for frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Email Configuration
MARKETING_EMAIL=marketing@scenicdoors.co
MANAGER_EMAIL=manager@scenicdoors.co
DEFAULT_QUOTE_RECIPIENTS=zach@scenicdoors.co,brody@scenicdoors.co

# Postmark Configuration
POSTMARK_API_TOKEN=your-postmark-api-token
POSTMARK_API_TOKEN_DEV=your-dev-postmark-api-token
POSTMARK_WEBHOOK_SECRET=your-webhook-secret-here

# Google Analytics & Tag Manager
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Cloud Project (alternative to FIREBASE_PROJECT_ID)
GCLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_PROJECT=your-project-id

# Prisma/PostgreSQL (if using Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
POSTGRES_PRISMA_URL=postgresql://user:password@localhost:5432/dbname

# Testing/Development Flags
ALLOW_NOTIFY_TEST=false

# Node Environment
NODE_ENV=development
